{% extends 'base.html.twig' %}

{% block title %}
        Ajouter Fournisseurs
      {% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
       <div class="col-md-12">
          <div class="card">
             {{ form_start(form) }}
             <div class="card-header card-header-icon" data-background-color="blue">
                        <i class="material-icons"> <a href="{{ path('fournisseurs_index') }}" > local_shipping</a></i>
                    </div>
             <div class="card-content">
             <div class="row"></div>
                <div class="row">
                                           <label class="col-sm-2 label-on-left">Nom & Prénom :</label>
                                           <div class="col-sm-10">
                                               <div class="row">
                                                   <div class="col-md-5">
                                                       <div class="form-group label-floating">
                                                           <label class="control-label">Nom Ex:M Bahri</label>
                                                           {{ form_widget(form.nom) }}

                                                       </div>
                                                   </div>
                                                   <div class="col-md-5">
                                                       <div class="form-group label-floating">
                                                           <label class="control-label">Prénom Ex:Mahdi</label>
                                                           {{ form_widget(form.prenom) }}
                                                       </div>
                                                   </div>
                                               </div>
                                           </div>
                                       </div>
                <div class="row">
                                               <label class="col-sm-2 label-on-left">Numéro :</label>
                                               <div class="col-sm-10">
                                                   <div class="row">
                                                       <div class="col-md-5">
                                                                <div class="form-group label-floating">
                                                                    <label class="control-label">Numéro portable: 99063811 </label>
                                                                      {{ form_widget(form.numTel) }}
                                                                </div>
                                                       </div>
                                                       <div class="col-md-5">
                                                        <div class="form-group label-floating">
                                                            <label class="control-label">Numéro Fixe:73430017</label>
                                                               {{ form_widget(form.numFix) }}
                                                        </div>
                                                       </div>
                                                   </div>
                                           </div>
                                       </div>
                <div class="row">
                                           <label class="col-sm-2 label-on-left"> Adresse :</label>
                                               <div class="col-sm-10">
                                                   <div class="row">
                                                       <div class="col-md-5">
                                                           <div class="form-group label-floating ">
                                                               <label class="control-label">Adress Ex:Avenue Habib Bourguiba</label>
                                                              {{ form_widget(form.adress) }}
                                                           </div>
                                                        </div>
                                                       <div class="col-md-5">
                                                           <div class="form-group label-floating">
                                                               <label class="control-label">Email Ex: ttshopsayada@gmail.com</label>
                                                               {{ form_widget(form.email) }}
                                                           </div>
                                                       </div>
                                                   </div>
                                                </div>
                                            </div>
                <div class="row">
                                           <label class="col-sm-2 label-on-left"> Prix Credit :</label>
                                               <div class="col-sm-10">
                                                   <div class="row">
                                                       <div class="col-md-5">
                                                           <div class="form-group label-floating ">
                                                               <label class="control-label">Credit Ex: 10dt</label>
                                                              {{ form_widget(form.credit) }}
                                                           </div>
                                                        </div>
                                                       <div class="col-md-5">
                                                           <div class="form-group label-floating">
                                                               <label class="control-label">Deponse Ex: 10dt</label>
                                                               {{ form_widget(form.deponse) }}
                                                           </div>
                                                       </div>
                                                   </div>
                                                </div>
                                            </div>
                <div class=row">
                                           <div class="col-sm-6">

                                           </div>
                                           <div class="col-sm-2">
                                               <button type="submit" class="btn btn-info">Ajouter </button>
                                           </div>
                                           <div class="col-sm-3">
                                               <a  class="btn btn-fill-info" href="{{ path('fournisseurs_index') }}">Retour à la liste</a>
                                                {{ form_end(form) }}
                                           </div>
                                       </div>
             </div>
          </div>
       </div>
    </div>
</div>
{% endblock %}
